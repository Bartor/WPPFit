<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context=".fragments.AddExerciseFragment">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/topBarGuideline"
            app:layout_constraintGuide_begin="56dp"/>

    <Spinner
            android:id="@+id/exerciseSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@+id/topBarGuideline"
            app:layout_constraintBottom_toTopOf="@id/minutesTextView"
    />
    <TextView
            android:id="@+id/minutesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/minutes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:spinnerMode="dropdown"
            app:layout_constraintTop_toBottomOf="@+id/exerciseSpinner"
            app:layout_constraintBottom_toTopOf="@id/minutesPicker"/>
    <NumberPicker
            app:layout_constraintTop_toBottomOf="@+id/minutesTextView"
            app:layout_constraintBottom_toTopOf="@id/addExcButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/minutesPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:layout_editor_absoluteX="0dp"/>
    <Button
            android:text="@string/add_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addExcButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/side_nav_bar" android:textColor="@android:color/background_light"
            android:enabled="true" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/minutesPicker"/>



</android.support.constraint.ConstraintLayout>